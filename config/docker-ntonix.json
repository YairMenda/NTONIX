{
  "server": {
    "port": 8080,
    "ssl_port": 8443,
    "threads": 4,
    "bind_address": "0.0.0.0"
  },
  "backends": [
    {"host": "backend-1", "port": 8001, "weight": 1},
    {"host": "backend-2", "port": 8001, "weight": 1}
  ],
  "cache": {
    "enabled": true,
    "max_size_mb": 512,
    "ttl_seconds": 3600
  },
  "ssl": {
    "enabled": false,
    "cert_file": "/app/certs/server.crt",
    "key_file": "/app/certs/server.key"
  },
  "logging": {
    "level": "info",
    "enable_console": true,
    "enable_colors": false
  }
}
